{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/include",
                "/opt/homebrew/include"
            ],
            "defines": [],
            "macFrameworkPath": [
  "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/opt/homebrew/bin/g++-14", // Change to "/usr/bin/clang++" for Clang
            "cStandard": "c17",
            "cppStandard": "c++23",
            "intelliSenseMode": "gcc-x64" // Change to "macos-clang-x64" for Clang
        }
    ],
    "version": 4
}
